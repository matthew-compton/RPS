<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_player_two_title"
        android:text="@string/fragment_player_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/padding_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_player_two_title"
        android:gravity="center">

        <Button
            android:id="@+id/fragment_player_two_button_rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rock" />

        <Button
            android:id="@+id/fragment_player_two_button_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper" />

        <Button
            android:id="@+id/fragment_player_two_button_scissors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scissors" />

    </LinearLayout>

</RelativeLayout>
